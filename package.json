{
  "name": "@opencastsoftware/govuk-nunjucks-renderer",
  "version": "0.1.0",
  "description": "A renderer for GOV.UK frontend Nunjucks components",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "npm run compile",
    "build": "esbuild src/index.ts --bundle --loader:.node=file --sourcemap --platform=node --target=node18 --outdir=dist",
    "compile": "tsc --noEmit",
    "lint": "eslint",
    "test": "vitest run",
    "prestart": "npm run build",
    "start": "node ./dist/index.js",
    "prettier": "prettier --write src/",
    "prettier-check": "prettier --check src/",
    "dev": "nodemon"
  },
  "author": "Opencast Software Europe Ltd",
  "license": "MIT",
  "dependencies": {
    "@koa/router": "13.1.1",
    "dotenv": "16.6.1",
    "isomorphic-git": "1.32.2",
    "js-yaml": "4.1.1",
    "koa": "2.16.3",
    "koa-bodyparser": "4.4.1",
    "koa-logger": "3.2.1",
    "nunjucks": "3.2.4",
    "semver": "7.7.2",
    "winston": "3.17.0",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "9.31.0",
    "@tsconfig/node18": "18.2.4",
    "@tsconfig/strictest": "2.0.5",
    "@types/common-tags": "1.8.4",
    "@types/js-yaml": "4.0.9",
    "@types/koa": "2.15.0",
    "@types/koa__router": "12.0.4",
    "@types/koa-bodyparser": "4.3.12",
    "@types/koa-logger": "3.1.5",
    "@types/node": "18.19.121",
    "@types/nunjucks": "3.2.6",
    "@types/semver": "7.7.0",
    "@types/supertest": "6.0.3",
    "@vitest/coverage-v8": "2.1.8",
    "common-tags": "1.8.2",
    "esbuild": "0.27.0",
    "eslint": "9.31.0",
    "nodemon": "3.1.10",
    "prettier": "3.6.2",
    "supertest": "7.1.4",
    "typescript": "5.8.3",
    "typescript-eslint": "8.36.0",
    "vitest": "2.1.8"
  }
}
